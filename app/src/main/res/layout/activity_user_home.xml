<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F4F6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".UserHome">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="33dp"
        android:text="@string/provide_credientials"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/email_input_layout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_corner_toggle"
        android:hint="@string/textfield_label"
        android:textColorHint="#090909"
        app:boxBackgroundColor="#FFFFFF"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:helperTextTextColor="#000000"
        app:placeholderTextColor="#000000"
        app:prefixTextColor="#000000"
        app:startIconDrawable="@drawable/mail_fill0_wght400_grad0_opsz48"
        app:startIconTint="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_input_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:textColor="#757575"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phone_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_corner_toggle"
        android:hint="@string/_123854278"
        android:textColorHint="#090909"
        android:visibility="visible"

        app:boxBackgroundColor="#FFFFFF"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:helperTextTextColor="#000000"
        app:placeholderTextColor="#000000"
        app:prefixTextColor="#000000"
        app:startIconDrawable="@drawable/call"
        app:startIconTint="#000000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_input_field"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:drawablePadding="7dp"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>






    <Button
        android:id="@+id/btn_save"
        style="?attr/materialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Update" />



</LinearLayout>