<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_view">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:visibility="invisible"/>
    <LinearLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/personal_layout_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_name"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="My Name"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:background="@drawable/box_shape"/>
            <TextView
                android:id="@+id/p_address"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Home Address"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="12sp"
                android:background="@drawable/box_shape"/>

            <TextView
                android:id="@+id/p_email"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="My Email"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:background="@drawable/box_shape"/>
            <TextView
                android:id="@+id/p_phone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="My Phone"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/box_shape"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/business_layout_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_name"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Business Name"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/box_shape"/>
            <TextView
                android:id="@+id/b_email"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Business Email"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/box_shape"/>

            <TextView
                android:id="@+id/b_address"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Business Address"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/box_shape"/>
            <TextView
                android:id="@+id/b_phone"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Business Phone"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/box_shape"/>
            <TextView
                android:id="@+id/bp_name"
                android:textSize="12sp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="My Name"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/box_shape"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:id="@+id/close_button"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:text="Close"
                android:drawableLeft="@drawable/baseline_close_24"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:background="@drawable/box_shape"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drag_icon"
                android:layout_toStartOf="@+id/swipeButton"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp" />
            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/swipeButton"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Business/Personal"
                android:textColor="@color/black"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:gravity="center"
                android:textSize="12sp"
                android:background="@drawable/box_shape"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>